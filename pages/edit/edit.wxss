/* pages/edit/edit.wxss */

.Edit {
    display: block;
    height: 100vh;
    width: 100vw;
    padding: 0 32rpx;
    box-sizing: border-box;
}

.Edit__input {
    margin-top: 32rpx;
    border: 1rpx solid #999;
    border-radius: 20rpx;
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 20rpx;
}

.Edit__button {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
    background-color: #ebebeb;
    text-align: center;
    color: #999;
}

.Edit__picker {
    margin-top: 32rpx;
}